<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setActivity">

    <!-- 音量按鈕 -->
    <Button
        android:id="@+id/btn_voiceup"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="音量加大"
        android:textSize="30sp"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btn_voicedown"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below = "@id/btn_voiceup"
        android:text="音量變小"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

    <!-- 音樂按鈕 -->
    <Button
        android:id="@+id/btn_musicup"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:text="音樂加大"
        android:textSize="30sp"
        android:layout_margin="20dp"/>
    <Button
        android:id="@+id/btn_musicdown"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below = "@id/btn_musicup"
        android:layout_alignParentEnd="true"
        android:text="音樂變小"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

    <!-- 導唱按鈕 -->
    <Button
        android:id="@+id/btn_lead"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:text="導唱"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

    <!-- 升調按鈕 -->
    <Button
        android:id="@+id/btn_rise"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="升調"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

    <!-- 降調按鈕 -->
    <Button
        android:id="@+id/btn_flat"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below = "@id/btn_rise"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="降調"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

    <!-- 靜音按鈕 -->
    <Button
        android:id="@+id/btn_mute"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below = "@id/btn_lead"
        android:layout_alignParentStart="true"
        android:text="靜音"
        android:textSize="30sp"
        android:layout_margin="20dp"/>

</RelativeLayout>